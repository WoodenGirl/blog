<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.aprilsxz.blog.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="fun.aprilsxz.blog.domain.po.Article">
            <id property="articleId" column="article_id" jdbcType="VARCHAR"/>
            <result property="articleTitle" column="article_title" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="VARCHAR"/>
            <result property="articleTags" column="article_tags" jdbcType="VARCHAR"/>
            <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
            <result property="articleContent" column="article_content" jdbcType="VARCHAR"/>
            <result property="articleCover" column="article_cover" jdbcType="VARCHAR"/>
            <result property="articleStatus" column="status" jdbcType="TINYINT"/>
            <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        article_id,article_title,user_id,
        article_tags,category_id,article_content,
        article_cover,article_status,create_time,
        update_time
    </sql>
    <select id="queryByCategoryId" resultType="fun.aprilsxz.blog.domain.vo.ArticleBrief">
        select a.article_id,a.article_title,a.article_tags,a.create_time,a.update_time,a.article_cover,a.article_status,u.nickname,c.category_name,u.avatar
        from article a, category c, user u
        where a.user_id = u.user_id and a.category_id = c.category_id and a.category_id = #{categoryId}
    </select>

    <select id="queryDetailById" resultType="fun.aprilsxz.blog.domain.vo.ArticleDetail">
        select a.article_id,a.article_title,a.article_tags,a.create_time,a.update_time,a.article_content,a.article_status,a.article_cover,a.user_id,a.category_id,u.nickname,c.category_name,u.avatar
        from article a, category c, user u
        where a.user_id = u.user_id and a.category_id = c.category_id and a.article_id = #{articleId}
    </select>
</mapper>
